<!DOCTYPE html>
<html>
<body>

<button onclick="myFunction()">Try it</button>

<script>
function myFunction() {
    var TheVariable;
    var person = prompt("Please enter your name:", "Harry Potter");
    if (person == null ) {
        TheVariable = "User cancelled the prompt.";
    } 
    else {
        TheVariable = "Hello " + person + "! How are you today?";
    }
    document.getElementById("demo").innerHTML = TheVariable;
}
</script>

<p id="demo"></p>

</body>
</html>
